<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">
 
 	<!-- ############################################################# -->
	<!-- definicion del lanzador y repositorio de trabajos -->
	<beans:import resource="../applicationContext.xml" />
 
	
	<!-- ############################################################# -->
	<!-- definicion del lanzador y repositorio de trabajos -->
	<beans:import resource="../applicationContext.xml" />
 
	<!-- ############################################################# -->
    <!-- generamos el gazeter de gate para identificar lugares, datos de geonames-->
 	<!-- generamos el gazeteer de gate y un fichero hash de acceso rapido a las coordenadas-->
 	
	<batch:job id="spainGateGazeteerCreatorJob">
		<batch:step id="spainGateGazeteerCreator" >
			<batch:tasklet ref="spainGateGazeteerCreatorTasklet"/>
		</batch:step>
	</batch:job>
	
	<!-- ############################################################# -->
	<!-- generamos el gazeteer de gate y un fichero hash de acceso rapido a las coordenadas-->
 	
	<beans:bean id="spainGateGazeteerCreatorTasklet" class="preprocessing.Tasklet_GeonamesToGateGazetteer">
		<beans:property name="sourceFile" value="data/input/gazeteer/geonamesSpain.txt" /> 
		<beans:property name="destinationFile" value="plugins/ANNIE/resources/gazetteer/spainNames.lst" />
		<beans:property name="destinationHash" value="data/temporal/gazeteer/geonamesGate.hsh" />  
	</beans:bean>
	
</beans:beans>


