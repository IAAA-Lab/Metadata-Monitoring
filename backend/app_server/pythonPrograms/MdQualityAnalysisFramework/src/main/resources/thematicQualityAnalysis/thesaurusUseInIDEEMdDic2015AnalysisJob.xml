<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">
 
 	<!-- ############################################################# -->
	<!-- definicion del lanzador y repositorio de trabajos -->
	<beans:import resource="../applicationContext.xml" />
 
	<!-- ############################################################# -->
    <!-- obtiene un resumen de los tesauros usados en la colección de metadatos antigua con 100000 md-->
	<batch:job id="thesaurusUseAnalisisJob">
	     <!-- (1) obtiene un resumen de los tesauros usados en la colección, tanto de metadatos de datos, como de servicios-->
		<batch:step id="usedThesaurusInCollectionAnalysis" >
			<batch:tasklet ref="usedThesaurusInCollectionAnalysisTasklet"/>
		</batch:step>
	</batch:job>
	
	<!-- ############################################################# -->
	<!-- (1) obtiene un resumen de los tesauros usados en la colección, tanto de metadatos de datos, como de servicios-->
	<beans:bean id="usedThesaurusInCollectionAnalysisTasklet" class="thematicQualityAnalysis.Tasklet_ThesaurusUseInMdAnalysis">
		<beans:property name="dbname" value="postgres" /> 
		<beans:property name="dbuser" value="postgres" /> 
		<beans:property name="dbpass" value="yuraku10" /> 
		<beans:property name="dbhost" value="localhost" /> 
		<beans:property name="dbport" value="5432" /> 
	</beans:bean>
</beans:beans>